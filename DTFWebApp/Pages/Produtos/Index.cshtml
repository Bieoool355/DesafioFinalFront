@page
@model DTFWebApp.Pages.Produtos.IndexModel
@{
}

<div class="text-center">
    <h1 class="text-center">
        Lista de Produtos
        <a class="btn btn-outline-primary align-content-end" asp-page="/Produtos/Create">Criar</a>
    </h1>
    <section class="d-flex">
        @foreach (var data in Model.Produtos)
        {
            <div class="produto-picture">
                <img src="@Html.DisplayFor(modelItem => data.imagem)" alt="Imagem do @Html.DisplayFor(modelItem => data.nome)" />
            </div>
            <div class="produto-info">
                <h1>Nome: @Html.DisplayFor(modelItem => data.nome)</h1>
                <h2>Id: @Html.DisplayFor(modelItem => data.ID)</h2>
                <h3>Marca: @Html.DisplayFor(modelItem => data.marca)</h3>
                <h3>Tamanho: @Html.DisplayFor(modelItem => data.tamanho)</h3>
                <h3>Categoria: @Html.DisplayFor(modelItem => data.categoria)</h3>
            </div>
            <a class="btn btn-info" asp-page="/Produtos/Detail" asp-route-id="@data.ID">Detalhes</a>
        }
    </section>
</div>