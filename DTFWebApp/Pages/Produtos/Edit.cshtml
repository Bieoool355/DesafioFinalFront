@page
@model DTFWebApp.Pages.Produtos.EditModel
@{
}


<h1 class="text-center">Editar Produto</h1>
<hr />
<form method="post">
    <div class="row">
        <input type="hidden" asp-for="Produto.ID" />
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Produto.nome" class="control-label">Nome</label>
                <input asp-for="Produto.nome" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Produto.marca" class="control-label">Marca</label>
                <input asp-for="Produto.marca" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Produto.categoria" class="control-label">Categoria</label>
                <input asp-for="Produto.categoria" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Produto.tamanho" class="control-label">Tamanho</label>
                <input asp-for="Produto.tamanho" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Produto.descricao" class="control-label">Descrição</label>
                <input asp-for="Produto.descricao" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Produto.quantidade" class="control-label">Quantidade</label>
                <input asp-for="Produto.quantidade" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Produto.valor" class="control-label">Valor</label>
                <input asp-for="Produto.valor" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Produto.imagem" class="control-label">Imagem</label>
                <input asp-for="Produto.imagem" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Produto.status" class="control-label">Status</label>
                <input asp-for="Produto.status" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary" />
    </div>
</form>