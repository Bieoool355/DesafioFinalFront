<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DTFWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container-fluid" style="border-bottom:2px solid #F09233">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-12 col-xl-12 px-sm-12" style="background-color:white !important">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white" style="padding-top:8px;padding-bottom:8px;">
                    <img src="https://i.imgur.com/F7YBrBF.png" class="img-fluid" alt="combee" width="140" height="100">
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0" style="background-color:#F09233 !important">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a asp-page="/Produtos/Index" class="nav-link align-middle px-0">
                                <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline font-weight-bold textoSidebar">Início</span>
                            </a>
                        </li>

                        <li>
                            <a asp-page="/Produtos/Create" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi-table"></i> <span class="ms-1 d-none d-sm-inline font-weight-bold textoSidebar">Cadastrar</span>
                            </a>
                        </li>
                    </ul>
                    <hr>
                </div>
            </div>
                <div class="col py-3">
                    <div class="container">
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>
                </div>
            </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="d-flex justify-content-center">
            &copy; 2021 - Combee - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
